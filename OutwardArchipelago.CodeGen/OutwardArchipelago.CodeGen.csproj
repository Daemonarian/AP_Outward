<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net10.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
		<APWorldPackageProjectDir>..\APWorld.Package</APWorldPackageProjectDir>
    </PropertyGroup>
    <ItemGroup>
      <PackageReference Include="CommandLineParser" Version="2.9.1" />
    </ItemGroup>
    <ItemGroup>
        <ProjectReference Include="$(APWorldPackageProjectDir)\APWorld.Package.csproj">
            <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
        </ProjectReference>
    </ItemGroup>
	<Target Name="CopySpecialFile" AfterTargets="Build">
		<Copy SourceFiles="$(APWorldPackageProjectDir)\build\apworld_ids.json" DestinationFolder="$(OutputPath)" />
	</Target>
</Project>
